<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--================== Silk Golem upgrade recipes ==================-->
  
  <RecipeDef ParentName="SilkGolem_Recipe_Base">
    <defName>TM_SilkGolem_RepairBlock</defName>
    <label>Part restoration</label>
    <description>Replaces missing golem parts that do not require an upgrade.</description>
    <jobString>crafting golem part</jobString>
	<skillRequirements>
	  <Construction>5</Construction>
    </skillRequirements>
	<workAmount>1000</workAmount>
    <ingredients>
	  <li>
        <filter>
          <categories>
            <li>Textiles</li>
          </categories>
        </filter>
        <count>50</count>
      </li> 
	  <li>
        <filter>
          <thingDefs>
            <li>RawMagicyte</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
  </RecipeDef>
  
  <RecipeDef ParentName="SilkGolem_Recipe_Base">
    <defName>TM_SilkGolem_EnergyMax</defName>
    <label>energy cell</label>
    <description>Creates an energy cell that increases maximum energy by 100 per cell.</description>
    <jobString>creating energy cell</jobString>
	<workAmount>2000</workAmount>
    <ingredients>
	  <li>
        <filter>
          <thingDefs>
            <li>RawMagicyte</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li> 
	  <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
  </RecipeDef>
  
  <RecipeDef ParentName="SilkGolem_Recipe_Base">
    <defName>TM_SilkGolem_EnergyConverter</defName>
    <label>energy converter</label>
    <description>Increases the efficiency of energy absorbed and used by the golem by 8%.</description>
    <jobString>constructing energy converter</jobString>	
	<workAmount>2000</workAmount>
    <ingredients>
	  <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li> 
	  <li>
        <filter>
          <thingDefs>
            <li>RawMagicyte</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
    </ingredients>
  </RecipeDef>
  
  <RecipeDef ParentName="SilkGolem_Recipe_Base">
    <defName>TM_SilkGolem_EnergyRegen</defName>
    <label>energy generator</label>
    <description>Increases the energy regeneration rate of the golem by 10%.</description>
    <jobString>constructing energy generator</jobString>	
	<workAmount>2000</workAmount>
    <ingredients>
	  <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>RawMagicyte</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>	  
	  <li>
        <filter>
          <categories>
            <li>Textiles</li>
          </categories>
        </filter>
        <count>40</count>
      </li>
    </ingredients>
  </RecipeDef>
  
  <RecipeDef ParentName="SilkGolem_Recipe_Base">
    <defName>TM_SilkGolem_LifeStage</defName>
    <label>frame tier</label>
    <description>Improves and refines the golem's frame each level [1,2,3]:
Movement:	+[20/30/40]%
Health:		+[20/40/60]%</description>
    <jobString>improving golem frame</jobString>
	<skillRequirements>
	  <Crafting>5</Crafting>
    </skillRequirements>
	<workAmount>5000</workAmount>
    <ingredients>
	  <li>
        <filter>
          <categories>
            <li>Textiles</li>
          </categories>
        </filter>
        <count>100</count>
      </li>
    </ingredients>
  </RecipeDef> 
  
  <RecipeDef ParentName="SilkGolem_Recipe_Base">
    <defName>TM_SilkGolem_Skills</defName>
    <label>Skills</label>
    <description>The silk golem improves the quality of wardening by 1 skill point.</description>
    <jobString>crafting golem upgrade</jobString>
	<skillRequirements>
	  <Crafting>4</Crafting>
    </skillRequirements>
	<workAmount>2000</workAmount>
	<researchPrerequisite>TM_GolemCraftRD</researchPrerequisite>
    <ingredients>
	  <li>
        <filter>
          <thingDefs>
            <li>Cloth</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>RawMagicyte</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>	
    </ingredients>
  </RecipeDef> 
  
