    <stages>
      <li>
        <label></label>
		<becomeVisible>false</becomeVisible>
        <minSeverity>0.1</minSeverity>
		<painFactor>0</painFactor>
		<statOffsets>
		  <CarryingCapacity>+75</CarryingCapacity>
		  <ImmunityGainSpeed>3</ImmunityGainSpeed>
		</statOffsets>
      </li>      
    </stages>
  </HediffDef>

