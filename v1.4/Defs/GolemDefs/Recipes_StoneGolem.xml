  <RecipeDef ParentName="StoneGolem_Recipe_Base">
    <defName>TM_StoneGolem_RepairBlock</defName>
    <label>Part restoration</label>
    <description>Replaces missing golem parts that do not require an upgrade.</description>
    <jobString>crafting golem part</jobString>
	<skillRequirements>
	  <Construction>6</Construction>
    </skillRequirements>
	<workAmount>2000</workAmount>
    <ingredients>
	  <li>
        <filter>
          <categories>
            <li>StoneBlocks</li>
          </categories>
        </filter>
        <count>80</count>
      </li> 
	  <li>
        <filter>
          <thingDefs>
            <li>RawMagicyte</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
  </RecipeDef>
  
