<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>TM_ManaSickness</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.55, 0.05, 1)</defaultLabelColor>
    <label>mana sickness</label>
	<description>Mana sickness affects mages when they have 0 mana and their regeneration is negative. Mana sickness will eventually kill a mage if it is not reversed. Players may evaluate a mage's mana regeneration in the Magic Tab while hovering over the Mana regeneration value to display a tooltip showing contributors affecting mana regeneration.</description>
    <lethalSeverity>10</lethalSeverity>
	<isBad>true</isBad>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.4</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>weakened</label>
        <minSeverity>0.1</minSeverity>
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>ailing</label>
        <minSeverity>4</minSeverity>
		<vomitMtbDays>0.4</vomitMtbDays>	
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
		  <li>
            <capacity>Sight</capacity>
            <offset>-0.2</offset>
          </li>
		  <li>
            <capacity>Breathing</capacity>
            <offset>-0.2</offset>
          </li>
		  <li>
            <capacity>Eating</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
	  <li>
        <label>near death</label>
        <minSeverity>7</minSeverity>
		<vomitMtbDays>0.4</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.6</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.6</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.3</offset>
          </li>
		  <li>
            <capacity>Sight</capacity>
            <offset>-0.3</offset>
          </li>
		  <li>
            <capacity>Breathing</capacity>
            <offset>-0.2</offset>
          </li>
		  <li>
            <capacity>Eating</capacity>
            <offset>-0.2</offset>
          </li>
		  <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.3</offset>
          </li>
		  <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  

  
  <HediffDef ParentName="TM_InfectionBase">
    <defName>TM_ArcaneSickness</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <label>arcane sickness</label>
	<description>A sickness caused by tainted magic.</description>
    <taleOnVisible>IllnessRevealed</taleOnVisible>
    <lethalSeverity>1</lethalSeverity>
	<initialSeverity>0.001</initialSeverity>
    <makesSickThought>true</makesSickThought>
    <tendable>true</tendable>
	<isBad>true</isBad>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <baseTendDurationHours>27</baseTendDurationHours>
        <severityPerDayTended>-0.2</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Immunizable">
        <immunityPerDayNotSick>-0.01</immunityPerDayNotSick>
        <immunityPerDaySick>0.55</immunityPerDaySick>
        <severityPerDayNotImmune>0.50</severityPerDayNotImmune>
        <severityPerDayImmune>-0.45</severityPerDayImmune>
      </li>
    </comps>
    <stages>
      <li>
        <label>minor</label>
        <becomeVisible>true</becomeVisible>
      </li>
      <li>
        <minSeverity>0.05</minSeverity>
        <label>minor</label>
        <painOffset>0.02</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.4375</minSeverity>
        <label>moderate</label>
        <painOffset>0.08</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.12</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.12</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.625</minSeverity>
        <label>major</label>
        <vomitMtbDays>0.5</vomitMtbDays>
        <painOffset>0.15</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.875</minSeverity>
        <label>extreme</label>
        <lifeThreatening>true</lifeThreatening>
        <vomitMtbDays>0.4</vomitMtbDays>
        <painOffset>0.1</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.32</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.9375</minSeverity>
        <label>extreme</label>
        <lifeThreatening>true</lifeThreatening>
        <vomitMtbDays>0.3</vomitMtbDays>
        <painOffset>0.45</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
</Defs>
