<Defs>


  <HediffDef >
    <defName>TM_AccelerateTimeHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<label>Aging</label>
	<description>Rapidly ages a pawn. Any other conditions affecting the pawn will also accelerate their natural tendencies. Pawns aged beyond their typical lifespan are frequently beset by age related illnesses or conditions.</description>
    <defaultLabelColor>(.4,.65,1)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
	<makesSickThought>false</makesSickThought>
	<tendable>false</tendable>
    <makesAlert>false</makesAlert>
	<maxSeverity>4.0</maxSeverity>
	<isBad>false</isBad>
	<initialSeverity>.5</initialSeverity>
	<comps>
	  <li>
        <compClass>TorannMagic.HediffComp_AccelerateTime</compClass>
      </li>	  
    </comps>
	<stages>
      <li>
        <label>I</label>
        <minSeverity>0.001</minSeverity>
		<becomeVisible>true</becomeVisible>
		<restFallFactorOffset>0.4</restFallFactorOffset>
		<hungerRateFactorOffset>.2</hungerRateFactorOffset>
		<capMods>
			<li>
			  <capacity>Manipulation</capacity>
			  <offset>0.2</offset>
			</li>
			<li>
			  <capacity>Moving</capacity>
			  <offset>0.2</offset>
			</li>
		</capMods>
      </li>
	  <li>
        <label>II</label>
        <minSeverity>1</minSeverity>
		<becomeVisible>true</becomeVisible>
		<restFallFactorOffset>0.5</restFallFactorOffset>
		<hungerRateFactorOffset>.25</hungerRateFactorOffset>
		<capMods>
			<li>
			  <capacity>Manipulation</capacity>
			  <offset>0.25</offset>
			</li>
			<li>
			  <capacity>Moving</capacity>
			  <offset>0.25</offset>
			</li>
		</capMods>
      </li>
	  <li>
        <label>III</label>
        <minSeverity>2</minSeverity>
		<becomeVisible>true</becomeVisible>
		<restFallFactorOffset>0.6</restFallFactorOffset>
		<hungerRateFactorOffset>.3</hungerRateFactorOffset>
		<capMods>
			<li>
			  <capacity>Manipulation</capacity>
			  <offset>0.3</offset>
			</li>
			<li>
			  <capacity>Moving</capacity>
			  <offset>0.3</offset>
			</li>
		</capMods>
      </li>
	  <li>
        <label>IV</label>
