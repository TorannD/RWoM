<Defs>

  <HediffDef>
    <defName>TM_UndeadHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<label>Undead</label>
	<description>A pawn animated by necrotic energy. This pawn possesses no intent of its own, and requires continual direction and energy from a necromancer.</description>
    <defaultLabelColor>(1,0.8,0.0)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
	<makesSickThought>false</makesSickThought>
	<tendable>false</tendable>
    <makesAlert>false</makesAlert>
	<minSeverity>0.001</minSeverity>
	<maxSeverity>4.0</maxSeverity>
	<disablesNeeds>
		<li>Rest</li>		
		<li>Joy</li>
		<li>Beauty</li>
		<li>Comfort</li>
		<li>Outdoors</li>
		<li>Indoors</li>
	</disablesNeeds>
	<initialSeverity>0.95</initialSeverity>
	<isBad>false</isBad>
	<comps>
	  <li>
        <compClass>TorannMagic.HediffComp_Undead</compClass>
      </li>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>0.0</severityPerDay>
      </li>	  
    </comps>
	<stages>
      <li>
        <label>I</label>
        <minSeverity>0.001</minSeverity>
		<restFallFactor>.1</restFallFactor>
		<hungerRateFactor>.1</hungerRateFactor>
		<capMods>
		  <li>
            <capacity>Talking</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>II</label>
        <minSeverity>1</minSeverity>	
		<restFallFactor>0</restFallFactor>
		<hungerRateFactor>.1</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.10</offset>
		  </li>
	      <li>
            <capacity>Manipulation</capacity>
            <offset>0.10</offset>
          </li>
		  <li>
            <capacity>Talking</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
		<statOffsets>
			<WorkSpeedGlobal>0.10</WorkSpeedGlobal>
	    </statOffsets>
      </li>
	  <li>
        <label>III</label>
        <minSeverity>2</minSeverity>	
		<restFallFactor>0</restFallFactor>
		<hungerRateFactor>.1</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.15</offset>
		  </li>
	      <li>
            <capacity>Manipulation</capacity>
            <offset>0.15</offset>
          </li>
		  <li>
            <capacity>Talking</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
		<statOffsets>
			<WorkSpeedGlobal>0.15</WorkSpeedGlobal>
	    </statOffsets>
      </li>
	  <li>
        <label>IV</label>
        <minSeverity>3</minSeverity>	
		<restFallFactor>0</restFallFactor>
		<hungerRateFactor>.1</hungerRateFactor>		
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.20</offset>
		  </li>
	      <li>
            <capacity>Manipulation</capacity>
            <offset>0.20</offset>
          </li>
		  <li>
            <capacity>Talking</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
		<statOffsets>
			<WorkSpeedGlobal>0.20</WorkSpeedGlobal>
	    </statOffsets>
      </li>
	  </stages>
  </HediffDef>
  
