  <HediffDef>
    <defName>TM_NightshadeToxinHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<label>Nightshade toxin</label>
	<description>Afflicted with nightshade toxin causing blindness and difficulty breathing.</description>
    <defaultLabelColor>(0.56,.18,0.81)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
	<makesSickThought>true</makesSickThought>
	<tendable>false</tendable>
    <makesAlert>false</makesAlert>
	<maxSeverity>10.0</maxSeverity>
	<isBad>true</isBad>
	<initialSeverity>.5</initialSeverity>
	<comps>
	  <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-50</severityPerDay>
      </li>
	  <li>
        <compClass>TorannMagic.HediffComp_NightshadeToxin</compClass>
      </li>	  
    </comps>
	<stages>
      <li>
        <label></label>
        <minSeverity>0</minSeverity>
		<becomeVisible>false</becomeVisible>
      </li>	 
	  <li>
        <label>I</label>
        <minSeverity>1</minSeverity>
		<becomeVisible>true</becomeVisible>
		<capMods>
		  <li>
            <capacity>Sight</capacity>
            <offset>-0.3</offset>
          </li>
		  <li>
            <capacity>Breathing</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>	
	  <li>
        <label>II</label>
        <minSeverity>2</minSeverity>
		<becomeVisible>true</becomeVisible>
		<lifeThreatening>true</lifeThreatening>
		<capMods>
		  <li>
            <capacity>Sight</capacity>
            <offset>-0.5</offset>
          </li>
		  <li>
            <capacity>Breathing</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>III</label>
        <minSeverity>3</minSeverity>
		<becomeVisible>true</becomeVisible>
		<lifeThreatening>true</lifeThreatening>
		<capMods>
		  <li>
            <capacity>Sight</capacity>
            <offset>-0.6</offset>
          </li>
		  <li>
            <capacity>Breathing</capacity>
            <offset>-0.35</offset>
          </li>
        </capMods>
      </li>	
	  <li>
        <label>IV</label>
        <minSeverity>5</minSeverity>
		<becomeVisible>true</becomeVisible>
		<lifeThreatening>true</lifeThreatening>
		<capMods>
		  <li>
            <capacity>Sight</capacity>
            <offset>-0.7</offset>
          </li>
		  <li>
            <capacity>Breathing</capacity>
            <offset>-0.45</offset>
          </li>
        </capMods>
      </li>	
	  <li>
        <label>V</label>
        <minSeverity>7</minSeverity>
		<becomeVisible>true</becomeVisible>
		<lifeThreatening>true</lifeThreatening>
		<capMods>
		  <li>
            <capacity>Sight</capacity>
            <offset>-0.8</offset>
          </li>
		  <li>
            <capacity>Breathing</capacity>
            <offset>-.5</offset>
          </li>
        </capMods>
      </li>	
	</stages>
  </HediffDef>
  
</Defs>
