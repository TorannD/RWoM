<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>TM_ShadowCloakHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.56, 0.18, .81)</defaultLabelColor>
    <label>Shadow Cloak</label>
	<description>Cloaked in shadows.</description>
    <maxSeverity>6</maxSeverity>
	<isBad>false</isBad>
	<comps>
      <li Class="HediffCompProperties_Disappears">
        <showRemainingTime>True</showRemainingTime>
      </li> 
      <li Class="HediffCompProperties">
        <compClass>HediffComp_Invisibility</compClass>
      </li>
    </comps>
    <stages>
      <li>
        <label></label>
        <minSeverity>.1</minSeverity>
      </li>
      <li>
        <label>I</label>
        <minSeverity>1</minSeverity>	
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.2</offset>			
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>0.2</offset>			
          </li>
        </capMods>
      </li>
	  <li>
        <label>II</label>
        <minSeverity>2</minSeverity>	
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.4</offset>
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>0.4</offset>			
          </li>
        </capMods>
      </li>
	  <li>
        <label>III</label>
        <minSeverity>3</minSeverity>	
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>.6</offset>
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>0.6</offset>			
          </li>
        </capMods>
      </li>
	  <li>
        <label>IV</label>
        <minSeverity>4</minSeverity>	
        <capMods>
		  <li>
            <capacity>Moving</capacity>
            <offset>.7</offset>
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>0.7</offset>			
          </li>
        </capMods>
      </li>
	  <li>
        <label>V</label>
        <minSeverity>5</minSeverity>	
        <capMods>
		  <li>
            <capacity>Moving</capacity>
            <offset>.8</offset>
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>0.8</offset>			
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>TM_NightshadeHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<label>Nightshade coating</label>
	<description>Applies nightshade toxin to weapons and ammunition.</description>
    <defaultLabelColor>(0.56,.18,0.81)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
	<makesSickThought>false</makesSickThought>
	<tendable>false</tendable>
    <makesAlert>false</makesAlert>
	<minSeverity>0.001</minSeverity>
	<maxSeverity>20.0</maxSeverity>
	<isBad>false</isBad>
	<initialSeverity>.5</initialSeverity>
	<comps>
	  <li>
        <compClass>TorannMagic.HediffComp_Nightshade</compClass>
      </li>	  
    </comps>
	<stages>
      <li>
        <label></label>
        <minSeverity>0</minSeverity>
		<becomeVisible>true</becomeVisible>
      </li>	  
	</stages>
  </HediffDef>
  
    <HediffDef>
    <defName>TM_HasteHD</defName>
