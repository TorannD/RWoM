<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--============= Portal jobs ===============-->

  <JobDef>
    <defName>PortalDestination</defName>
    <driverClass>TorannMagic.JobDriver_PortalDestination</driverClass>
    <reportString>assigning portal destination.</reportString>
    <casualInterruptible>false</casualInterruptible>
  </JobDef>
  
  <JobDef>
    <defName>UsePortal</defName>
    <driverClass>TorannMagic.JobDriver_UsePortal</driverClass>
    <reportString>using portal.</reportString>
    <casualInterruptible>false</casualInterruptible>
  </JobDef>
  
  <JobDef>
    <defName>DeactivatePortal</defName>
    <driverClass>TorannMagic.JobDriver_DeactivatePortal</driverClass>
    <reportString>deactivating portal.</reportString>
    <casualInterruptible>false</casualInterruptible>
  </JobDef>
  
  <JobDef>
    <defName>ChargePortal</defName>
    <driverClass>TorannMagic.JobDriver_ChargePortal</driverClass>
    <reportString>charging portal.</reportString>
    <casualInterruptible>false</casualInterruptible>
  </JobDef>
  
  <JobDef>
    <defName>PortalStockpile</defName>
    <driverClass>TorannMagic.JobDriver_PortalStockpile</driverClass>
    <reportString>sending items through portal.</reportString>
    <casualInterruptible>false</casualInterruptible>
  </JobDef>
  
</Defs>
