	<RecipeDef ParentName="SurgeryRegrowth">
		<defName>Regrowth</defName>
		<label>regrow body part (Druid only, 90% mana required)</label>
		<description>Use druidic powers to regrow body parts.</description>
		<workerClass>TorannMagic.Recipe_RegrowBodyPart</workerClass>
		<jobString>Regrowing body part.</jobString>
		<workAmount>750</workAmount>
		<dontShowIfAnyIngredientMissing>true</dontShowIfAnyIngredientMissing>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>SeedofRegrowth</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ManaPotion</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<thingDefs>
				<li>SeedofRegrowth</li>
				<li>ManaPotion</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Shoulder</li> 
			<li>Arm</li> 
			<li>Hand</li> 
			<li>Leg</li> 
			<li>Foot</li> 
			<li>Eye</li>
			<li>Ear</li>
			<li>Nose</li>
			<li>Jaw</li>
			<li>Ribcage</li>
			<li>Heart</li>
			<li>Lung</li>
			<li>Kidney</li>
			<li>Liver</li>
			<li>Stomach</li>
			<li>Spine</li>
		</appliedOnFixedBodyParts>
	</RecipeDef>
	
