<?xml version="1.0" encoding="utf-8" ?>

 
<Defs>

	<TorannMagic.TMDefs.TM_GolemUpgradeDef>
		<defName>TM_Golem_WoodRepair</defName>
		<label>restore part</label>
		<recipe>TM_WoodGolem_RepairBlock</recipe>
		<maxLevel>0</maxLevel>
		<workstationEffects>
			<li Class="TorannMagic.Golems.GolemWorkstationEffect_RestorePart" />
		</workstationEffects>
	</TorannMagic.TMDefs.TM_GolemUpgradeDef>

	<TorannMagic.TMDefs.TM_GolemUpgradeDef>
		<defName>TM_Golem_WoodMaxEnergy</defName>
		<label>energy storage</label>
		<description>Increases maximum energy by 100 per level. Starting max energy is 400.</description>
		<recipe>TM_WoodGolem_EnergyMax</recipe>
		<bodypart>TM_Wood_Reserves</bodypart>
		<partRequiresUpgrade>false</partRequiresUpgrade>
		<maxLevel>3</maxLevel>
		<workstationCapacity>EnergyMax</workstationCapacity>
	</TorannMagic.TMDefs.TM_GolemUpgradeDef>
	
	<TorannMagic.TMDefs.TM_GolemUpgradeDef>
		<defName>TM_Golem_WoodEnergyEfficiency</defName>
		<label>energy efficiency</label>
		<description>Increases energy efficiency by 5% per level. Starting energy efficiency is 25%.</description>
		<recipe>TM_WoodGolem_EnergyConverter</recipe>
		<bodypart>Wood_SlotA</bodypart>
		<partRequiresUpgrade>false</partRequiresUpgrade>
		<maxLevel>5</maxLevel>
		<workstationCapacity>Efficiency</workstationCapacity>
	</TorannMagic.TMDefs.TM_GolemUpgradeDef>
	
	<TorannMagic.TMDefs.TM_GolemUpgradeDef>
		<defName>TM_Golem_WoodEnergyRate</defName>
		<label>energy regeneration</label>
		<description>Increases energy charge rate by 15% per level. Starting recharge rate is 25 energy/hour.</description>
		<recipe>TM_WoodGolem_EnergyRegen</recipe>
		<bodypart>Wood_SlotB</bodypart>
		<partRequiresUpgrade>false</partRequiresUpgrade>
		<maxLevel>5</maxLevel>
		<workstationCapacity>EnergyRegeneration</workstationCapacity>
	</TorannMagic.TMDefs.TM_GolemUpgradeDef>	
	
	<TorannMagic.TMDefs.TM_GolemUpgradeDef>
		<defName>TM_Golem_WoodArmor</defName>
		<label>armor</label>
		<description>Increases overall protection:
Blunt:	+[9,17,23]%
Sharp:	+[8,15,21]%
Heat:	+[4,7,10]%</description>
		<maxLevel>3</maxLevel>
		<recipe>TM_WoodGolem_Armor</recipe>
		<bodypart>TM_Wood_Chest</bodypart>
		<partRequiresUpgrade>false</partRequiresUpgrade>
		<hediff>TM_WoodGolem_ArmorHD</hediff>
		<hediffSeverityPerLevel>.8</hediffSeverityPerLevel>
	</TorannMagic.TMDefs.TM_GolemUpgradeDef>
	
	<TorannMagic.TMDefs.TM_GolemUpgradeDef>
		<defName>TM_Golem_WoodSkills</defName>
		<label>Skill Enhancement</label>
		<description>Increases the skill levels of construction and handling by 2 per skill level and cooking by 1 per skill level.</description>
		<maxLevel>5</maxLevel>
		<recipe>TM_WoodGolem_Skills</recipe>
		<bodypart>TM_Wood_Focus</bodypart>
		<partRequiresUpgrade>false</partRequiresUpgrade>
	</TorannMagic.TMDefs.TM_GolemUpgradeDef>

	<TorannMagic.TMDefs.TM_GolemUpgradeDef>
		<defName>TM_Golem_WoodLifeStage</defName>
		<label>frame tier</label>
		<description>Increases stats:
Movement:	+[20%/30%/40%]
Health:		+[20%/40%/60%]</description>
		<maxLevel>3</maxLevel>
		<recipe>TM_WoodGolem_LifeStage</recipe>
		<bodypart>TM_Wood_Core</bodypart>
		<partRequiresUpgrade>false</partRequiresUpgrade>
		<occupiedPart>TM_Wood_Core</occupiedPart>
		<lifeStages>
			<li>TM_WoodGolemLS</li>
			<li>TM_WoodGolemLS1</li>
			<li>TM_WoodGolemLS2</li>
			<li>TM_WoodGolemLS3</li>
		</lifeStages>
		<drawUndrafted>false</drawUndrafted>
		<drawOnlyWhenActive>false</drawOnlyWhenActive>
	</TorannMagic.TMDefs.TM_GolemUpgradeDef>

</Defs>

