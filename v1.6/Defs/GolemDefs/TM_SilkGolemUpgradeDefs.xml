<Defs>

	<TorannMagic.TMDefs.TM_GolemUpgradeDef>
		<defName>TM_Golem_SilkRepair</defName>
		<label>restore part</label>
		<recipe>TM_SilkGolem_RepairBlock</recipe>
		<maxLevel>0</maxLevel>
		<workstationEffects>
			<li Class="TorannMagic.Golems.GolemWorkstationEffect_RestorePart" />
		</workstationEffects>
	</TorannMagic.TMDefs.TM_GolemUpgradeDef>

	<TorannMagic.TMDefs.TM_GolemUpgradeDef>
		<defName>TM_Golem_SilkMaxEnergy</defName>
		<label>energy storage</label>
		<description>Increases maximum energy by 100 per level. Starting max energy is 300.</description>
		<recipe>TM_SilkGolem_EnergyMax</recipe>
		<bodypart>Golem_Spine</bodypart>
		<partRequiresUpgrade>false</partRequiresUpgrade>
		<maxLevel>3</maxLevel>
		<workstationCapacity>EnergyMax</workstationCapacity>
	</TorannMagic.TMDefs.TM_GolemUpgradeDef>
	
	<TorannMagic.TMDefs.TM_GolemUpgradeDef>
		<defName>TM_Golem_SilkEnergyEfficiency</defName>
		<label>energy efficiency</label>
		<description>Increases energy efficiency by 8% per level. Starting energy efficiency is 40%.</description>
		<recipe>TM_SilkGolem_EnergyConverter</recipe>
		<bodypart>Silk_SlotA</bodypart>
		<partRequiresUpgrade>false</partRequiresUpgrade>
		<maxLevel>5</maxLevel>
		<workstationCapacity>Efficiency</workstationCapacity>
	</TorannMagic.TMDefs.TM_GolemUpgradeDef>
	
	<TorannMagic.TMDefs.TM_GolemUpgradeDef>
		<defName>TM_Golem_SilkEnergyRate</defName>
		<label>energy regeneration</label>
		<description>Increases energy charge rate by 10% per level. Starting recharge rate is 20 energy/hour.</description>
		<recipe>TM_SilkGolem_EnergyRegen</recipe>
		<bodypart>Silk_SlotB</bodypart>
		<partRequiresUpgrade>false</partRequiresUpgrade>
		<maxLevel>5</maxLevel>
		<workstationCapacity>EnergyRegeneration</workstationCapacity>
	</TorannMagic.TMDefs.TM_GolemUpgradeDef>	
	
	<TorannMagic.TMDefs.TM_GolemUpgradeDef>
		<defName>TM_Golem_SilkSkills</defName>
		<label>Skill Enhancement</label>
		<description>Increases the skill levels of wardening by 1 per skill level. Starts with a skill of 7.</description>
		<maxLevel>5</maxLevel>
		<recipe>TM_SilkGolem_Skills</recipe>
		<bodypart>Golem_Brain</bodypart>
		<partRequiresUpgrade>false</partRequiresUpgrade>
	</TorannMagic.TMDefs.TM_GolemUpgradeDef>

	<TorannMagic.TMDefs.TM_GolemUpgradeDef>
		<defName>TM_Golem_SilkLifeStage</defName>
		<label>frame tier</label>
		<description>Increases stats:
Movement:	+[20%/30%/40%]
Health:		+[20%/40%/60%]</description>
		<maxLevel>3</maxLevel>
		<recipe>TM_SilkGolem_LifeStage</recipe>
		<bodypart>TM_Silk_Core</bodypart>
		<partRequiresUpgrade>false</partRequiresUpgrade>
		<occupiedPart>TM_Silk_Core</occupiedPart>
		<lifeStages>
			<li>TM_SilkGolemLS</li>
			<li>TM_SilkGolemLS1</li>
			<li>TM_SilkGolemLS2</li>
			<li>TM_SilkGolemLS3</li>
		</lifeStages>
		<drawUndrafted>false</drawUndrafted>
		<drawOnlyWhenActive>false</drawOnlyWhenActive>
	</TorannMagic.TMDefs.TM_GolemUpgradeDef>

</Defs>

