<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>TM_Confused</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 1)</defaultLabelColor>
    <label>Confused</label>
	<description>Frequently causes a target to become confused.</description>
    <lethalSeverity>50</lethalSeverity>
	<isBad>true</isBad>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-50</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>Wandering confused</label>
        <minSeverity>0.1</minSeverity>
		<mentalStateGivers>
			<li>
			 <mentalState>WanderConfused</mentalState>
			 <mtbDays>0.001</mtbDays>
			</li>
		</mentalStateGivers>
      </li>      
    </stages>
  </HediffDef>
  
</Defs>
