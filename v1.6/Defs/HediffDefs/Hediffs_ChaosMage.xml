<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>TM_ChaosTraditionHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<label>Chaotic Flux</label>
	<description>Exercising control of reality through objective interpretation that results in the emphasis of the physical and mental solidity of a Chaos Mage.</description>
    <defaultLabelColor>(0.51,0.6,0.8)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
	<makesSickThought>false</makesSickThought>
	<tendable>false</tendable>
    <makesAlert>false</makesAlert>
	<maxSeverity>24.0</maxSeverity>
	<isBad>false</isBad>
	<initialSeverity>.5</initialSeverity>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-24</severityPerDay>
      </li>
    </comps>
	<stages>
	  <li>
        <label>I</label>
        <minSeverity>.001</minSeverity>
		<becomeVisible>true</becomeVisible>
		<capMods>
		  <li>
			  <capacity>Moving</capacity>
			  <offset>0.2</offset>
		  </li>
		  <li>
			  <capacity>Consciousness</capacity>
			  <offset>0.1</offset>
		  </li>
		  <li>
			  <capacity>Manipulation</capacity>
			  <offset>0.1</offset>
		  </li>
		</capMods>
		<statOffsets>
		  <AimingDelayFactor>-0.05</AimingDelayFactor>
	    </statOffsets>
      </li>
	  <li>
        <label>II</label>
        <minSeverity>8.1</minSeverity>
		<becomeVisible>true</becomeVisible>
		<capMods>
		  <li>
			  <capacity>Moving</capacity>
			  <offset>0.3</offset>
		  </li>
		  <li>
			  <capacity>Consciousness</capacity>
			  <offset>0.20</offset>
		  </li>
		  <li>
			  <capacity>Manipulation</capacity>
			  <offset>0.2</offset>
		  </li>
		  <li>
			  <capacity>Breathing</capacity>
			  <offset>0.1</offset>
		  </li>
		  <li>
			  <capacity>BloodPumping</capacity>
			  <offset>0.1</offset>
		  </li>
		</capMods>
		<statOffsets>
		  <AimingDelayFactor>-0.10</AimingDelayFactor>
	    </statOffsets>
      </li>
	  <li>
        <label>III</label>
        <minSeverity>16.1</minSeverity>
		<becomeVisible>true</becomeVisible>
		<capMods>
		  <li>
			  <capacity>Moving</capacity>
			  <offset>0.4</offset>
		  </li>
		  <li>
			  <capacity>Consciousness</capacity>
			  <offset>0.3</offset>
		  </li>
		  <li>
			  <capacity>Manipulation</capacity>
			  <offset>0.3</offset>
		  </li>
		  <li>
			  <capacity>Breathing</capacity>
			  <offset>0.2</offset>
		  </li>
		  <li>
			  <capacity>BloodPumping</capacity>
			  <offset>0.2</offset>
		  </li>
		</capMods>
		<statOffsets>
		  <AimingDelayFactor>-0.2</AimingDelayFactor>
	    </statOffsets>
      </li>
	</stages> 
  </HediffDef>
  
  <HediffDef>
    <defName>TM_ChaoticMindHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<label>Chaotic Mind</label>
	<description>Exercising control of reality through objective interpretation that results in the emphasis of the physical and mental solidity of a Chaos Mage.</description>
    <defaultLabelColor>(0.51,0.6,0.8)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
	<makesSickThought>false</makesSickThought>
	<tendable>false</tendable>
    <makesAlert>false</makesAlert>
	<maxSeverity>24.0</maxSeverity>
	<isBad>false</isBad>
	<initialSeverity>.5</initialSeverity>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-24</severityPerDay>
      </li>
    </comps>
	<stages>
      <li>
        <label>thought</label>
        <minSeverity>0.001</minSeverity>
		<becomeVisible>false</becomeVisible>
      </li>
	</stages> 
  </HediffDef>
  
  <ThoughtDef>
    <defName>TM_ChaoticMindTD</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>TM_ChaoticMindHD</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Chaotic</label>
        <description>I felt the endless possibilities of magic when I allowed my mind to be unfettered by order.</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <HediffDef>
    <defName>TM_ControlledChaosHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<label>Controlled Chaos</label>
	<description>Exercising control of reality through objective interpretation that results in the emphasis of the physical and mental solidity of a Chaos Mage.</description>
