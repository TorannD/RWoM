<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--================== Wood Golem upgrade recipes ==================-->
  
  <RecipeDef ParentName="WoodGolem_Recipe_Base">
    <defName>TM_WoodGolem_RepairBlock</defName>
    <label>Part restoration</label>
    <description>Replaces missing golem parts that do not require an upgrade.</description>
    <jobString>crafting golem part</jobString>
	<skillRequirements>
	  <Construction>5</Construction>
    </skillRequirements>
	<workAmount>1000</workAmount>
    <ingredients>
	  <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li> 
	  <li>
        <filter>
          <thingDefs>
            <li>RawMagicyte</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
  </RecipeDef>
  
  <RecipeDef ParentName="WoodGolem_Recipe_Base">
    <defName>TM_WoodGolem_EnergyMax</defName>
    <label>energy cell</label>
    <description>Creates an energy cell that increases maximum energy by 100 per cell.</description>
    <jobString>creating energy cell</jobString>
	<workAmount>2000</workAmount>
    <ingredients>
	  <li>
        <filter>
          <thingDefs>
            <li>RawMagicyte</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li> 
	  <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
  </RecipeDef>
  
  <RecipeDef ParentName="WoodGolem_Recipe_Base">
    <defName>TM_WoodGolem_EnergyConverter</defName>
    <label>energy converter</label>
    <description>Increases the efficiency of energy absorbed and used by the golem by 5%.</description>
    <jobString>constructing energy converter</jobString>	
	<workAmount>2000</workAmount>
    <ingredients>
	  <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li> 
	  <li>
        <filter>
          <thingDefs>
            <li>RawMagicyte</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
    </ingredients>
  </RecipeDef>
  
  <RecipeDef ParentName="WoodGolem_Recipe_Base">
    <defName>TM_WoodGolem_EnergyRegen</defName>
    <label>energy generator</label>
    <description>Increases the energy regeneration rate of the golem by 15% per hour.</description>
    <jobString>constructing energy generator</jobString>	
	<workAmount>2000</workAmount>
    <ingredients>
	  <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>RawMagicyte</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>	  
	  <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
    </ingredients>
  </RecipeDef>
  
  <RecipeDef ParentName="WoodGolem_Recipe_Base">
    <defName>TM_WoodGolem_Armor</defName>
    <label>Hardening</label>
    <description>Each upgrade increases the armor of the golem:
Blunt:	+[9,17,23]%
Sharp:	+[8,15,21]%
Heat:	+[4,7,10]%</description>
    <jobString>crafting golem part</jobString>
	<skillRequirements>
	  <Construction>6</Construction>
    </skillRequirements>
	<workAmount>3000</workAmount>
    <ingredients>
	  <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
	  <li>
        <filter>
          <categories>
            <li>StoneBlocks</li>
          </categories>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
        <li>Steel</li>
      </thingDefs>
      <categories>
        <li>StoneBlocks</li>
      </categories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>StoneBlocks</li>
      </categories>
      <disallowedThingDefs>
      </disallowedThingDefs>
    </defaultIngredientFilter>
  </RecipeDef>
  
  <RecipeDef ParentName="WoodGolem_Recipe_Base">
    <defName>TM_WoodGolem_LifeStage</defName>
    <label>frame tier</label>
    <description>Improves and refines the golem's frame each level [1,2,3]:
Movement:	+[20/30/40]%
Health:		+[20/40/60]%</description>
    <jobString>improving golem frame</jobString>
	<skillRequirements>
	  <Construction>5</Construction>
    </skillRequirements>
	<workAmount>5000</workAmount>
    <ingredients>
	  <li>
        <filter>
		  <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>100</count>
      </li>
    </ingredients>
  </RecipeDef> 
  
  <RecipeDef ParentName="WoodGolem_Recipe_Base">
    <defName>TM_WoodGolem_Skills</defName>
    <label>Skills</label>
    <description>The wood golem improves the quality of cooking, construction, and handling by 2 skill points.</description>
    <jobString>crafting golem upgrade</jobString>
	<skillRequirements>
	  <Construction>4</Construction>
    </skillRequirements>
	<workAmount>2000</workAmount>
	<researchPrerequisite>TM_GolemCraftRD</researchPrerequisite>
    <ingredients>
	  <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>RawMagicyte</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>	
    </ingredients>
  </RecipeDef> 
  
</Defs>
